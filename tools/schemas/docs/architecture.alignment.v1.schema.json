{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "yai/docs/architecture.alignment.v1.schema.json",
  "title": "YAI Architecture Alignment Snapshot v1",
  "type": "object",
  "required": [
    "version",
    "canonical_topology",
    "components",
    "traceability_rows"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "canonical_topology": {
      "type": "string",
      "minLength": 1
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "path",
          "status",
          "adr_refs",
          "runbook_refs",
          "mp_refs",
          "l0_refs"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "pattern": "^docs/architecture/components/.+\\.md$"
          },
          "status": {
            "type": "string",
            "enum": ["implemented", "partial", "planned/external"]
          },
          "adr_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^docs/design/adr/.+\\.md$"
            }
          },
          "runbook_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^docs/runbooks/.+\\.md$"
            }
          },
          "mp_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^docs/milestone-packs/.+\\.md$"
            }
          },
          "l0_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^deps/yai-specs/.+"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "traceability_rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "component",
          "status",
          "adr_refs",
          "runbook_refs",
          "mp_refs",
          "l0_refs",
          "is_planned_marker"
        ],
        "properties": {
          "component": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["implemented", "partial", "planned/external"]
          },
          "adr_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^docs/design/adr/.+\\.md$"
            }
          },
          "runbook_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^docs/runbooks/.+\\.md$"
            }
          },
          "mp_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^docs/milestone-packs/.+\\.md$"
            }
          },
          "l0_refs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^deps/yai-specs/.+"
            }
          },
          "is_planned_marker": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
