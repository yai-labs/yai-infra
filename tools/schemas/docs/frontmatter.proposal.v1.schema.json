{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "frontmatter.proposal.v1",
  "type": "object",
  "required": ["id", "status", "owner", "effective_date"],
  "properties": {
    "id": {"type": "string", "pattern": "^PRP-"},
    "status": {"type": "string", "enum": ["draft", "active", "accepted", "deprecated"]},
    "owner": {"type": "string", "minLength": 1},
    "effective_date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"}
  }
}
